.row
  = render 'shared/errors', object: @article

%h2 Create an Entry:
= form_for @article, html: { multipart: true } do |f|
  %p
    = f.label :title
    %br
    = f.text_field :title

  %p
    = f.label :entry, "Create your entry"
    %br
    = f.text_area :entry, rows: 20

  %p
    = f.submit
  %p.picture
    = f.file_field :picture